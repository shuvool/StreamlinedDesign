<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <VBox>

       <TabPane>
           <Tab fx:id="tabCustomers" closable="false" text="Customers">
               <VBox alignment="CENTER_LEFT" prefHeight="250">
               <HBox alignment="CENTER">
                  <children>
                     <VBox alignment="CENTER_LEFT" spacing="15.0">
                        <children>
                               <Button fx:id="customerAdd" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Add New Customer" />
                               <Button fx:id="customerServices" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Add Customer Services" />
                               <Button fx:id="customerPayments" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Customer Payments" />
                               <Button fx:id="customerInvoices" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Customer Invoices" />
                               <Button fx:id="customerUpdate" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Update Customer Record" />
                               <Button fx:id="customerDelete" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Delete Customer" />
                        </children>
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </VBox>
                     <TableView>
                       <columns>
                         <TableColumn prefWidth="75.0" text="C1" />
                         <TableColumn prefWidth="75.0" text="C2" />
                       </columns>
                     </TableView>
                  </children>
               </HBox>
               </VBox>
           </Tab>
           <Tab fx:id="tabEmployees" closable="false" text="Employees">
               <VBox alignment="CENTER_LEFT" prefHeight="250" spacing="15.0">
               <HBox alignment="CENTER">
                  <children>
                     <VBox alignment="CENTER_LEFT" spacing="15.0">
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                        <children>
                               <Button fx:id="employeeAdd" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Add New Employee" />
                               <Button fx:id="employeeUpdate" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Update Employee" />
                               <Button fx:id="employeePayments" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Employee Payments" />
                               <Button fx:id="employeeSchedule" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Employee Schedule" />
                               <Button fx:id="employeeDelete" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Delete Employee" />
                        </children>
                     </VBox>
                     <TableView>
                        <columns>
                           <TableColumn prefWidth="75.0" text="C1" />
                           <TableColumn prefWidth="75.0" text="C2" />
                        </columns>
                     </TableView>
                  </children>
               </HBox>
               </VBox>
           </Tab>
           <Tab fx:id="tabVendorsUtilities" closable="false" text="Vendors and Utilities">
               <VBox alignment="CENTER_LEFT" spacing="5.0">
                   <Button fx:id="utilityAdd" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Add New Utility" />
                   <Button fx:id="vendorAdd" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Add New Vendor" />
                   <Button fx:id="utilityPayments" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Utility Payments" />
                   <Button fx:id="vendorPayments" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Vendor Payments" />
                   <Button fx:id="utilityHistory" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Utility History" />
                   <Button fx:id="vendorHistory" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Vendor History" />
                   <Button fx:id="utilityDelete" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Delete Utility" />
                   <Button fx:id="vendorDelete" mnemonicParsing="false" prefHeight="22.0" prefWidth="200.0" text="Delete Vendor" />
               </VBox>
           </Tab>
           <Tab fx:id="tabMaintenance" closable="false" text="Maintenance">
               <VBox alignment="CENTER_LEFT" spacing="15.0">
                   <Button fx:id="equipmentAdd" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Add Equipment" />
                   <Button fx:id="equipmentStatus" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Update Equipment Status" />
                   <Button fx:id="equipmentMaintenance" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Equipment Maintenance" />
                   <Button fx:id="equipmentUpcoming" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="List Upcoming Maintenance" />
                   <Button fx:id="equipmentDelete" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Delete Equipment" />
               </VBox>
           </Tab>
           <Tab fx:id="tabExpenseReport" text="Expense Report">
               <Button fx:id="expenseReport" mnemonicParsing="false" prefHeight="36.0" prefWidth="200.0" text="Generate Expense Report" />
           </Tab>
       </TabPane>
   </VBox>
   <graphic>
      <MenuBar prefHeight="25.0" prefWidth="163.0">
       <Menu mnemonicParsing="false" text="File">
        <MenuItem mnemonicParsing="false" text="Close" />
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
        <MenuItem mnemonicParsing="false" text="Delete" />
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
        <MenuItem mnemonicParsing="false" text="About" />
       </Menu>
      </MenuBar>
   </graphic>
</TitledPane>
